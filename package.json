{
  "name": "jnahian-claude-theme",
  "displayName": "Claude Theme by jnahian",
  "description": "A warm, professional VS Code theme inspired by Claude's design system. Available on VS Code Marketplace and Open VSX Registry.",
  "version": "0.1.8",
  "publisher": "jnahian",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "claude",
    "warm",
    "professional",
    "rust",
    "orange",
    "serif",
    "light",
    "dark"
  ],
  "galleryBanner": {
    "color": "#C15F3C",
    "theme": "light"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jnahian/vscode-claude-theme.git"
  },
  "bugs": {
    "url": "https://github.com/jnahian/vscode-claude-theme/issues"
  },
  "homepage": "https://github.com/jnahian/vscode-claude-theme#readme",
  "contributes": {
    "themes": [
      {
        "label": "Claude Light",
        "uiTheme": "vs",
        "path": "./themes/claude-light-color-theme.json"
      },
      {
        "label": "Claude Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/claude-dark-color-theme.json"
      }
    ],
    "configuration": {
      "title": "Claude Theme",
      "properties": {
        "claude-theme.fontFamily": {
          "type": "string",
          "default": "ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif",
          "description": "Recommended font family for Claude theme (serif fonts)"
        },
        "claude-theme.fontSize": {
          "type": "number",
          "default": 14,
          "description": "Recommended font size for Claude theme"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package --out packages/",
    "publish": "./publish.sh"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "ovsx": "^0.10.5"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0"
  }
}
